@model List<BlogModel>
@{
    ViewData["Title"] = "Blog";
    int count = 0;
}

<h2> Blog List</h2>

<a href="/Blog/Create" class="btn btn-success">New</a>

<br />

<span>Total Number of Blogs: @Model.Count</span>

<table class="table table-responsive">
    <thead>
        <tr>
             <th>Actions</th>
            <th>No</th>
            <th>Title</th>
            <th>Author</th>
            <th>Content</th>
        </tr>
    </thead>
    <tbody>
        @foreach( BlogModel item in Model)
        {
            <tr>
                <td>
                    <a href="/Blog/Edit/@item.BlogId" class="btn btn-warning">
                        Edit
                    </a>

                    <a href="/Blog/Delete/@item.BlogId" class="btn btn-danger">
                        Delete
                    </a>
                </td>
                <td>@(++count)</td>
                <td>@item.BlogTitle</td>
                <td>@item.BlogAuthor</td>
                <td>@item.BlogContent</td>
            </tr>
        }
    </tbody>


</table>
